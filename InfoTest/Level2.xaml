<Window x:Class="InfoTest.Level2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfoTest"
        mc:Ignorable="d"
        Title="Level2" 
        
        WindowState="Maximized" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        AllowsTransparency="True"
        
        Background="Transparent">

    <Grid Background="Transparent">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Rectangle Fill="Black" Height="270" Width="1920" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="r1" Visibility="Hidden"/>
        <Rectangle Fill="Black" Height="270" Width="1920" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="r2" Visibility="Hidden"/>
        <Rectangle Fill="Black" Height="270" Width="1920" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="r3" Visibility="Hidden"/>
        <Rectangle Fill="Black" Height="270" Width="1920" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="r4" Visibility="Hidden"/>
    </Grid>
</Window>