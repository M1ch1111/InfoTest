<Window x:Class="InfoTest.Level1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfoTest"
        mc:Ignorable="d"
        Title="Level1" Height="250" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding TextContent}" HorizontalAlignment="center" VerticalAlignment="Center" FontSize="17" Margin="10"/>
        <Button x:Name="timerButton" Grid.Column="0" Grid.Row="1" Background="Green" Content="{Binding ButtonContent}" Margin="20" FontSize="25" Click="start_Click"/>
    </Grid>
</Window>
